[Unit]
Description=gophish
After=network.target
[Service]
Type=simple
WorkingDirectory={{ gophish_install_destination }}
ExecStart="{{ gophish_binary }}"
User={{ gophish_user }}
PIDFile="{{ gophish_binary }}.pid"
StandardOutput=file:/var/log/gophish/gophish.log
StandardError=file:/var/log/gophish/gophish_error.log
[Install]
WantedBy=multi-user.target